{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react",
    "lib": ["es6"],
    "moduleResolution": "node",
    "noEmit": true,
    "strict": true,
    "target": "esnext",
    // customisation due to react-native-klarna being in the parent directory
    "baseUrl": ".",
    "paths": {
      "react-native-klarna": ["../../index.d.ts"]
    }
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js",
    "../../node_modules",
    "../../babel.config.js",
    "../../metro.config.js",
    "../../jest.config.js"
  ],
  "include": ["../../"]
}
